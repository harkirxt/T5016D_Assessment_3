# Add information within classes
class Engine:

    def start(self):

        print("Engine started.")
class Transmission:

    def shift_gears(self):
        print ("shift gear")


class Car:

   def __init__(self):

        self.engine = Engine()

        self.transmission = Transmission()

#different class that focus on the class system and how it functions
# display code

def start(self):

    self.engine.start()

def drive(self):

    self.transmission.shift_gears()
